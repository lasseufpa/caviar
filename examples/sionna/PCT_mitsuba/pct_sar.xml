<scene version="2.1.0">

<!-- Defaults, these can be set via the command line: -Darg=value -->

	<default name="spp" value="4096"/>
	<default name="resx" value="1920"/>
	<default name="resy" value="1080"/>

<!-- Camera and Rendering Parameters -->

	<integrator type="path">
		<integer name="max_depth" value="12"/>
	</integrator>
	<sensor type="perspective" id="Camera">
		<string name="fov_axis" value="x"/>
		<float name="fov" value="39.597755"/>
		<float name="principal_point_offset_x" value="0.000000"/>
		<float name="principal_point_offset_y" value="-0.000000"/>
		<float name="near_clip" value="0.100000"/>
		<float name="far_clip" value="1000.000000"/>
		<transform name="to_world">
			<rotate x="1" angle="101.59997231909928"/>
			<rotate y="1" angle="-1.0181832248901554e-05"/>
			<rotate z="1" angle="35.999898548953716"/>
			<translate value="-425.567566 56.413383 147.650970"/>
		</transform>
		<sampler type="independent">
			<integer name="sample_count" value="$spp"/>
		</sampler>
		<film type="hdrfilm">
			<integer name="width" value="$resx"/>
			<integer name="height" value="$resy"/>
		</film>
	</sensor>

<!-- Materials -->

	<bsdf type="twosided" id="mat-itu_concrete.001">
		<bsdf type="diffuse">
			<rgb value="0.220257 0.016055 0.012376" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-itu_metal">
		<bsdf type="principled">
			<rgb value="0.800000 0.800000 0.800000" name="base_color"/>
			<float name="spec_tint" value="0.000000"/>
			<float name="spec_trans" value="0.000000"/>
			<float name="metallic" value="0.000000"/>
			<float name="anisotropic" value="0.000000"/>
			<float name="roughness" value="0.500000"/>
			<float name="sheen" value="0.000000"/>
			<float name="sheen_tint" value="0.500000"/>
			<float name="clearcoat" value="0.000000"/>
			<float name="clearcoat_gloss" value="0.173205"/>
			<float name="specular" value="0.500000"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-itu_concrete">
		<bsdf type="principled">
			<rgb value="0.800000 0.800000 0.800000" name="base_color"/>
			<float name="spec_tint" value="0.000000"/>
			<float name="spec_trans" value="0.000000"/>
			<float name="metallic" value="0.000000"/>
			<float name="anisotropic" value="0.000000"/>
			<float name="roughness" value="0.500000"/>
			<float name="sheen" value="0.000000"/>
			<float name="sheen_tint" value="0.500000"/>
			<float name="clearcoat" value="0.000000"/>
			<float name="clearcoat_gloss" value="0.173205"/>
			<float name="specular" value="0.500000"/>
		</bsdf>
	</bsdf>

<!-- Emitters -->

	<emitter type="constant" id="World">
		<rgb value="1.000000 1.000000 1.000000" name="radiance"/>
	</emitter>

<!-- Shapes -->

	<shape type="ply" id="mesh-map_2_osm_buildings">
		<string name="filename" value="meshes/map_2_osm_buildings.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_concrete.001" name="bsdf"/>
	</shape>
	<shape type="ply" id="mesh-Cube">
		<string name="filename" value="meshes/Cube.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_metal" name="bsdf"/>
	</shape>
	<shape type="ply" id="mesh-Plane">
		<string name="filename" value="meshes/Plane.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_concrete" name="bsdf"/>
	</shape>
</scene>
